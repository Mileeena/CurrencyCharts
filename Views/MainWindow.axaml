<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CurrencyCharts.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:charting="http://schemas.stocksharp.com/xaml"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
		xmlns:gif="clr-namespace:AvaloniaGif;assembly=AvaloniaGif"
        xmlns:vms="using:ViewModelsSamples.Financial.BasicCandlesticks"
        x:Class="CurrencyCharts.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="CurrencyCharts">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <Grid>
	  <Grid.RowDefinitions>
		  <RowDefinition Height="45"/>
		  <RowDefinition Height="*"/>
	  </Grid.RowDefinitions>

	  <ComboBox Name="CurrencyComboBox"
				Items="{Binding Currency}"
				Grid.Row="0"
				HorizontalAlignment="Left" 
				Margin="10,0,0,0" 
				VerticalAlignment="Center" 
				Width="120" 
				Height="30"
				SelectedItem="{Binding Symbol}"/>
	  
	  <ComboBox Name="TimeIntervalsComboBox"
				Items="{Binding TimeIntervals}"
				Grid.Row="0"
				HorizontalAlignment="Left" 
				Margin="150,0,0,0" 
				VerticalAlignment="Center" 
				Width="120" 
				Height="30"
				SelectedItem="{Binding Interval}"	/>

<!--
	  <gif:GifImage
					Stretch="None"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					RenderOptions.BitmapInterpolationMode="Default"
					SourceUri="/Assets/spongebob.gif">
	  </gif:GifImage>
-->

	  <lvc:CartesianChart
		  AutoUpdateEnabled="True"
		  Name="chart"
		  Grid.Row="1"
		  ZoomMode="Both"
		  Background="#151a1e"
		  Series="{Binding Series}"
		  XAxes="{Binding XAxes}">
	  </lvc:CartesianChart>

  </Grid> 

</Window>

