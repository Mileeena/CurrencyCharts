<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:svg="clr-namespace:Svg.Skia.Avalonia;assembly=Svg.Skia.Avalonia">

	<Style Selector="Grid.MainGrid">
		<Setter Property="Background" Value="#151A1E"/>
	</Style>
	
	<!--ComboBox выбора валюты и времени-->
	<Style Selector="ComboBox.SettingsStyle">
		<Setter Property="Background" Value="Purple"/>
		<Setter Property="BorderBrush" Value="Purple"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="FontSize" Value="18"/>
		<Setter Property="Foreground" Value="White"/>
	</Style>
	<!--ComboBox выбора валюты-->
	<Style Selector="ComboBox.SettingsStyleCurrency">
		<Setter Property="Width" Value="150"/>
		<Setter Property="Height" Value="40"/>
	</Style>
	<!--ComboBox выбора времени-->
	<Style Selector="ComboBox.SettingsStyleTimeIntervals">
		<Setter Property="Width" Value="90"/>
		<Setter Property="Height" Value="40"/>
	</Style>
	
</Styles>